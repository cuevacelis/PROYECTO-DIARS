@model CapaEntidad.entPersona

@{
    ViewBag.Title = "Editar Persona";
    ViewBag.image = "/Contents/images/security.png";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) {

    @Html.AntiForgeryToken()
    

        <div class="form-horizontal">
            <h4 class="display-4">Editar Persona</h4>
            @Html.ValidationSummary(true)


            <div class="form-horizontal">
                @Html.LabelFor(model => model.idPersona, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.idPersona)
                @Html.ValidationMessageFor(model => model.idPersona)
            </div>

            <div class="form-horizontal">
                @Html.LabelFor(model => model.nombreyApellidoPersona, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombreyApellidoPersona)
                @Html.ValidationMessageFor(model => model.nombreyApellidoPersona)
            </div>

            <div class="form-horizontal">
                @Html.LabelFor(model => model.DNI, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DNI)
                @Html.ValidationMessageFor(model => model.DNI)
            </div>

            <div class="form-horizontal">
                @Html.LabelFor(model => model.telefono, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.telefono)
                @Html.ValidationMessageFor(model => model.telefono)
            </div>

            <div class="form-horizontal">
                @Html.LabelFor(model => model.estPersona, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.estPersona)
                @Html.ValidationMessageFor(model => model.estPersona)
            </div>

            <div class="form-horizontal">
                <p class="control-label col-md-2">TipoPersona:</p>
                <div class="col-md-10">
                    @Html.DropDownList("cboTipoPersona", (SelectList)ViewBag.listaTipoPersona, "<seleccionar>")
                </div>
            </div>

            <div class="form-horizontal">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-outline-primary" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "ListarPersona")
</div>
